/* pages/shopping-cart/shopping-cart.wxss */
.content{
  width: 100%;
  height: 100%;
  min-height: 1168rpx;
  background-color:white;
  padding: 50rpx 0 90rpx 0;
  box-sizing: border-box;
}
/* 购物车列表 */
.shopping-list{
  width: 100%;
  height: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
/* 商品项*/
.shopping-item{
  width: 100%;
  height: 169rpx;
  background-color: red;
  margin-bottom: 50rpx;
  display: flex;
  box-sizing: border-box;
}
/*商品图*/
.Commodity-figure{
  height: 169rpx;
  width: 169rpx;
  background-color: yellow
}
/*商品描述*/
.product-description{
  width: 522rpx;
  height: 100%;
  background-color: white;
  box-sizing: border-box;
  overflow: hidden;
}
/*商品秒速part1文字*/
.description-item1{
  width: 494rpx;
  height: 29rpx;
  margin-bottom: 33rpx;
  padding: 0 0 0 26rpx;
}
/*商品秒速part2文字*/
.description-item2{
  height: 23rpx;
  width: 494rpx;
  margin-bottom:38rpx;
  padding: 0 0 0 26rpx;
  justify-content: center
}
/* 商品描述part3文字 */
.description-item3{
  height: 48rpx;
  width: 494rpx;
  display: flex;
  padding: 0 0 0 26rpx;
  justify-content: space-between
}
/* 购物车商品增减按钮 */
.increase{
  height: 100%;
  font-size:24rpx;
  font-family:PingFang-SC-Bold;
  display: flex;
}
/* 商品删减图标 */
.increase-deleticon{
  height: 44rpx;
  width: 44rpx;
  border: 1rpx #999999 solid;
  border-radius:50%;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
  margin-right: 20rpx;
}
/* 商品增减数量 */
.increase-num{
  height: 100%;
  line-height: 45rpx;
  margin-right: 20rpx;
  font-weight: bold;
}
/* 商品增加图标 */
.increase-addicon{
  height: 44rpx;
  width: 44rpx;
  font-size: 30rpx;
  background-color: #F6D047;
  border-radius:50%;
  text-align: center;
}
/*底部提交栏*/
.submit-navigation{
  position: fixed;
  width:100%;
  height:88rpx;
  bottom: 0;
  background-color: #F5F5F5;
  display: flex;
  box-sizing: border-box;
  padding: 0 28rpx;
  justify-content: space-between;
}
/* 底部提交栏金额 */
.navigation-price{
  height: 100%;
  width: 30%;
  font-size:24rpx;
  font-weight:bold;
  line-height: 88rpx;
  color: #999999;
}
/* 底部提交按钮 */
.navigation-submit{
  width:138rpx;
  height:60rpx;
  background:rgba(252,211,40,1);
  border-radius:30rpx;
  margin-top: 15rpx;
  line-height: 60rpx;
  font-size:24rpx;
  font-weight:bold;
  text-align: center;
}
/* 弹窗 */
.Dialog{
  width: 100%;
  height: 1223rpx;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0,0,0,1);
  opacity:0.8;
}
/* 弹窗内容 */
.Dialog-content{
  width: 470rpx;
  height: 370rpx;
  background:#FFFFFF;
  border-radius:10px;
  position: fixed;
  z-index: 9999;
  left: 140rpx;
  top:240rpx;
  padding-top: 58rpx;
}
/* 配送方式 */
.distribution{
  width: 100%;
  height: 29rpx;
  text-align: center;
  line-height: 29rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 74rpx;
}
/* 配送按钮1 */
.distribution-button1{
  width: 100%;
  height: 80rpx;
  text-align: center;
  padding: 0 55rpx;
  box-sizing: border-box;
  margin-bottom: 38rpx;
  }
  /* 自提按钮文字 */
.button-text1{
  background:rgba(252,211,40,1);
  border-radius:40rpx;
  height: 100%;
  line-height: 80rpx;
  width: 360rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
}
