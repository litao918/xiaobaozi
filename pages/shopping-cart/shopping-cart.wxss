/* pages/shopping-cart/shopping-cart.wxss */
.content{
  width: 100%;
  height: 100%;
  min-height: 1218rpx;
  background-color:white;
  padding: 50rpx 0 0 0;
}
/* 购物车列表 */
.shopping-list{
  width: 100%;
  height: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
}
/* 商品项*/
.shopping-item{
  width: 100%;
  height: 168rpx;
  background-color: red;
  margin-bottom: 50rpx;
  display: flex;
}
/*商品图*/
.Commodity-figure{
  height: 168rpx;
  width: 168rpx;
  background-color: yellow
}
/*商品描述*/
.product-description{
  width: 522rpx;
  height: 100%;
  background-color: white;
  box-sizing: border-box;
}
/*商品秒速part1文字*/
.description-item1{
  width: 100%;
  height: 35rpx;
  margin-bottom: 44rpx;
  /* background-color: blue; */
  padding: 0 0 0 26rpx;
  
}
/*商品秒速part2文字*/
.description-item2{
  font-size:24px;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(153,153,153,1);
}
/*底部提交栏*/
.submit-navigation{
  position: fixed;
  width:100%;
  height:88rpx;
  bottom: 0;
  background-color: #F5F5F5;
}