<!--pages/coupon/coupon.wxml-->
<view class='content'>
  <view class='coupon'>
    <image style='width:100%;height:200rpx;' src='../../img/优惠券背景.png'></image>
    <view class='discount'> 
      <view class='money'>£<text style='margin-left:14rpx;font-size:60rpx;font-family:PingFang-SC-Bold;font-weight:bold;line-height:54rpx;'>20</text></view>
      <view class='full-reduction'>{{selectpackage.full}}200{{selectpackage.usable}}</view>
    </view>
    <view class='merchandise'>
      <view class='merchandise-text'>
        <view style='font-size:24rpx;font-family:PingFang-SC-Bold;font-weight:bold;color:rgba(0,0,51,1);'>仅限购买小笼包</view>
        <view style='margin-top:19rpx; font-size:18rpx;font-family:PingFang-SC-Bold;font-weight:bold;color:rgba(153,153,153,1);'>{{selectpackage.validity}}<text>2019-8-1</text></view>
      </view>
    </view>
    <view class='use'>{{selectpackage.use}}</view>
  </view>
</view>