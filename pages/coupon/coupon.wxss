/* pages/coupon/coupon.wxss */
/* 外层盒子 */
.content{
  width: 100%;
  min-height: 1216rpx;
  height: auto;
  background-color: #F5F5F5;
  box-sizing: border-box;
  padding: 60rpx  30rpx  0 30rpx;
 
}
/* 优惠券项 */
.coupon{
  width:100%;
  height:200rpx;
  position: relative;
  margin-top: 30rpx;
}
/* 折扣力度字体样式部分 */
.discount{
  height: 135rpx;
  width: 200rpx;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  /* background: red; */
  padding-top:65rpx; 
}
/* 支付金额 */
.money{
  height: 67rpx;
  width: 100%;
  background-color: white;
  text-align: center;
  line-height: 67rpx;
}
/* 满减文字 */
.full-reduction{
  width:100%;
  height: 20rpx;
  text-align: center;
  font-size:18rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(0,0,48,1);
  line-height:21rpx;
  margin-top: 13rpx;
}
/* 商品详细 */
.merchandise{
  position: absolute;
  top:0;
  left: 203rpx;
  height: 200rpx;
  width: 420rpx;
  /* background-color: red; */
  padding-top: 75rpx;
  box-sizing: border-box;
}
/* 详细内容 */
.merchandise-text{
  height: 72rpx;
  width: 100%;
  background-color: white;
  padding-left: 58rpx;
  box-sizing: border-box;
}
/* 立即使用按钮 */
.use{
  position: absolute;
  top: 0;
  left: 625rpx;
  width: 68rpx;
  height: 200rpx;
  text-align: center;
  writing-mode: vertical-lr;
  line-height: 68rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1)
}