/* pages/ceshi/ceshi.wxss */
.header{
  display: flex;
  background-color: rgba(219, 219, 221, 0.884);
  align-items: center;
  height: 60rpx;
}
.active{
  color: red;
  background: #fff;
}
.header .headerClass{
  color: red;
  margin-left: 20rpx;
}
.header .headerClass,
.header .headerPin{
  font-size: 28rpx;
}
.search{
  display: flex;
  height: 46rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  background-color:white;
  width: 70%;
}
.search text{
  color: gainsboro;
  font-family: monospace;
  font-size: 30rpx;
  line-height: 46rpx;
    
}
.search image{
  padding-left:50rpx; 
  width: 46rpx;
  height: 46rpx;
}
.main{
  display: flex;
}
.left{
  width: 30%;
  background: #f5f5f5;
  
}
.left view{
  padding: 40rpx;
  text-align: center;
  font-size: 24rpx;
}
.right{
  width: 75%;  
  /* padding-left:10rpx;
  padding-right:20rpx; */
  margin: 0 20rpx;

}
 
.listItem2{
  display: flex;
  margin-bottom:50rpx; 
}
.listItem .img{
  width: 164rpx;
  height: 158rpx;
  text-align: center;
  padding-top: 10rpx;
  margin-right: 20rpx;
}
.listItem .img image{
  width: 80%;
  height: 80%
}
.itemTitle{
  width: 100%;
  height: 56rpx;
  font-size: 30rpx;
  padding-top: 10rpx;
  color:gray;
  margin-bottom: 20rpx;
  margin-top: 25rpx;

}
.listItem .listText{
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}
.listItem .listText view{
  display: flex;
  align-items: flex-end;
}
.listItem .listText text{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.listItem .listText .money{
  color: red;
  padding: 28rpx 0;
}
.listItem .listText view text{
  font-size: 28rpx;
  color :silver;
  margin-right: 60rpx;
}
.listItem .listText view button{
  background-color: red;
  color: white;
  padding-right: 8px;
  padding-left: 8px;
  padding-top: 0px;
}
::-webkit-scrollbar
{
width: 6px;
height: 6px;
background-color: #ffffff;
} 
::-webkit-scrollbar-track{
  height: 20rpx;
  color: black;
}


.add{
  height: 44rpx;
  position: absolute;
  right: 0;
  display: flex;
}

